{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@sb/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
